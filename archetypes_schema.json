{
  "archetypes": {
    "ecs-service": {
      "description": "Deploys one or more services on ECS with support for ALB, WAF, CDN and secrets.",
      "variables": {
        "services": {
          "description": "Map of service configurations",
          "type": "map",
          "object": {
            "name": "string",
            "image": "string",
            "port": "number",
            "cpu": "number",
            "memory": "number",
            "desired_count": "number",
            "health_path": "string",
            "environment": [
              {
                "name": "string",
                "value": "string"
              }
            ],
            "secrets": [
              {
                "name": "string",
                "value": "string"
              }
            ],
            "assign_public_ip": "bool",
            "service_needs_db": "bool",
            "enable_https": "bool",
            "enable_cdn": "bool",
            "cdn_config": {
              "price_class": "string",
              "default_ttl": "number",
              "min_ttl": "number",
              "max_ttl": "number",
              "allowed_methods": ["string"],
              "cached_methods": ["string"]
            },
            "enable_waf": "bool",
            "waf_rules": [
              {
                "name": "string",
                "priority": "number",
                "action": "string",
                "statement": {
                  "type": "string",
                  "parameters": {
                    "any": "any"
                  }
                },
                "override_action": {
                  "map": "string"
                },
                "visibility_config": {
                  "cloudwatch_metrics_enabled": "bool",
                  "metric_name": "string",
                  "sampled_requests_enabled": "bool"
                }
              }
            ],
            "domain_name": "string",
            "certificate_arn": "string",
            "tags": {
              "map": "string"
            }
          }
        },
        "vpc_id": "string",
        "subnet_ids": ["string"],
        "ecs_cluster_id": "string"
      }
    },

    "database": {
      "description": "Deploys a database on RDS, Aurora or DynamoDB.",
      "variables": {
        "deployment_name": "string",
        "database_engine": "string",
        "allocated_storage": "number",
        "instance_class": "string",
        "db_name": "string",
        "db_username": "string",
        "db_password": "string",
        "multi_az": "bool",
        "private_subnet_ids": ["string"],
        "security_group_id": "string",
        "additional_security_groups": ["string"],
        "availability_zones": ["string"],
        "tags": {
          "map": "string"
        },
        "enable_read_replica": "bool"
      }
    }

  }
}
